<div class ="container">
	<h4>注文履歴一覧</h4><br>
	<div class = "row" >
    <table align = "left" class = "table table-bordered">
	    <thead>
	     <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文詳細</th>
       </tr>
      </thead>
      <tbody>
        <% @orders.reverse.each do |order| %>
        <tr>
            <td><%= l order.created_at,format: :short %></td>
            <td>
                〒<%= order.zip_code %><br>
                <%= order.address %><br>
                <%= order.name %>
            </td>
            <td>
            <% order.order_items.each do |order_item| %>
                <%= order_item.item.name %><br>
            <% end %>
           </td>
            <td><%= order.price %>円</td>
            <td><%= link_to "表示する", order_path(order) %></td>
        </tr>
        <% end %>
      </body>
	</table>
</div>