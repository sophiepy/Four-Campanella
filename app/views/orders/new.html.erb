  <div class = "container">
    <div class = "row">
      <div class = "mx-auto py-5 ">
        <h2>注文情報入力</h2><br>
          <div class = "row" >
            <div class = "col-xs-12">
              <h4>支払い方法</h4>
            <%= form_with model: @order, url: check_path, method: :post, local:true do |f| %>
              <%= f.radio_button :payment_method, "credit_card", checked: true %>
              <%= f.label :payment_method, "クレジットカード" %>
              <%= f.radio_button :payment_method, "transfer" %>
              <%= f.label :payment_method, "銀行振込" %>
              <h4>お届け先</h4>
              <div class="form-group">
              <%#= f.radio_button :address_number, 0, checked: true %>
              <%#= f.label :address_number_0, "ご自身の住所" %>
              〒<%= current_user.zip_code %>
              <%= current_user.address %><br>
              <%= f.hidden_field :address, :value =>current_user.address %>
              <%= f.hidden_field :zip_code, :value => current_user.zip_code %>
              <%= f.hidden_field :name, :value => current_user.first_name + current_user.last_name %>
              <!--3/23下記２行どうにか表示させる-->
              <%= f.hidden_field :quantity, :value => @order.quantity %>
              <%= f.hidden_field :price, :value => @order.total_price %>

              <h4>ラッピングサービス</h4>
              <%= f.radio_button :wrapping, "Unnecessary", checked: true %>
              <%= f.label :payment_method, "不要" %>
              <%= f.radio_button :wrapping, "necessary" %>
              <%= f.label :wrapping, "必要" %>
              <%= link_to "ラッピングイメージ参照", confirm_wrapping_path, class: "btn btn-sm btn-outline-danger" %>


              <%#= f.radio_button :address_number, 1 %>
              <%#= f.label :address_number_1, "登録済住所から選択" %>
              <%#= f.select :shipping_id, options_from_collection_for_select(current_customer.shippings, :id, :full_address) %>
              <%#= f.select :shipping_id, options_from_collection_for_select(Shipping.all, :id, :shipping_display) %>
              <%#= f.radio_button :address_number, 2 %>
              <%#= f.label :address_number_2, "新しいお届け先" %><br>
              <%#= f.label :zip_code, "郵便番号(ハイフンなし)"%>
              <%#= f.text_field :zip_code %><br>
              <%#= f.label :address, "住所" %>
              <%#= f.text_field :address, :size=> "40" %><br>
              <%#= f.label :name, "宛名" %>
              <%#= f.text_field :name %><br>
              <%= f.hidden_field :item_id, value: params[:item_id] %>
              <%= f.submit "確認画面へ進む", class: "btn btn-success" %>
          　　<%#= f.submit "確認画面へ進む", confirm_path, class: "btn btn-primary" %>
          　　</div>
        <% end %>
        <%#= params.inspect %>
        </div>
      </div>
  </div>
  </div>
  </div>
