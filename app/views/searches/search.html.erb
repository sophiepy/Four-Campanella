<table class="table table-hover table-inverse">
    <!--<h2>検索結果<small><%#= params[:word], "(全#{@all_search_count}件)" %></small></h2>-->
    <h2>検索結果<small><%= params[:word] %></small></h2>
     <thead>
      <tr>
        <th></th>
        <th>商品名</th>
        <th>商品説明</th>
        <th>金額</th>
        <th colspan="3"></th>
      </tr>
     </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%#= item.inspect %><%= image_tag item.get_item_image("300x200") %><%#= image_tag item.user.get_item_image, size:'50x50' %></td>
          <td><%= item.name %></td>
          <td><%= item.introduction %></td>
          <td><%= item.price %>円</td>
          <td><%= link_to '商品詳細',item_path(item.id) %></td>
        </tr>
     <% end %>
    </tbody>
  </table>