
<div class = "container">
  <div class = "row my-5">
    <div class = "col-4">
      <h3>商品一覧<small><%= "(全#{@all_items_count}件)" %></small></h3>
    </div>
  </div>
  <div class = "row">
      <div class="col-10">
        <div class="row">
          <% @items_page.each do |item| %>
            <div class = "col-4">
              <div class = "card w-20 my-2">
                <%= link_to item_path(item) do %>
                  <%= image_tag item.get_item_image("300x200"),size: "300x200", class: "card-img-top" %>
                <% end %>
                <div class = "card-body">
                  <div class = "row">
                    <%= item.name %>
                  </div>
                  <div class = "row">
                  <%= item.price %>円<br>
                  <!--ここからいいね機能追記-->
                  <div class = "row">
                  <% if item.favorited_by?(current_user) %>
                  <%= link_to item_favorites_path(item), method: :delete do %>
                  <span class= "heart" >♥<%= item.favorites.count %> </span>
                  <% end %>
                  <% else %>
                  <%= link_to item_favorites_path(item), method: :post do %>
                  ♥<%= item.favorites.count %>
                  <% end %>
                  <% end %>
                  </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <%= paginate @items_page %>
</div>